<div>
  <h2 style="color: rgb(22, 111, 167); text-align: center;">Display Order Details</h2>
</div>
<div class="table-data">
  <table class="table table-striped" width='50' height="50" border="1">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Order Id</th>
        <th scope="col"> Total Price</th>
        <th scope="col">Ordered On</th>
        <th scope="col">Status</th>
        <th scope="col">Details</th>
      </tr>
    </thead>
    <% userorderitems.forEach(function(order){ %>
      <tr>
        <td scope="row">
          <%= order.order_id %>
        </td>
        <td scope="row">
          <%= order.total_order_amount %>
        </td>

        <td scope="row">
          <%= order.createdAt %>
        </td>
        <td scope="row">
          <%= order.status %>
        </td>

        <form action="/login/viewDetails" method="POST">
          <input type="hidden" name="id" value=<%=order.id %>>
          <td><button name="orderId" value=<%=order.order_id %>>View Details</button> </td>
        </form>
      </tr>

      </tr>
      <% } )%>

  </table>

</div>