  <body>
    <div>
      <% include adminheader.html %>
    </div>
    <br><br>
    <br>
    <h1 style="color: rgb(22, 111, 167); text-align: center;">Add User</h1>
    <div class="container" style="width: 500px;">
      <% if(message.length){ %>
        <div style="color: brown; text-align: center;font-size:large ;">
          <%= message %>
        </div>
        <% } %>
          <form action="/admin/useradded" method="POST">
            <div class="form-group">
              <label for="">Name*</label>
              <input class="form-control" type="text"  name="name">
            </div>
            <div class="form-group">
              <label for="">Email*</label>
              <input class="form-control" type="email"  name="email" autocomplete="off">
            </div>
            <div class="form-group">
              <label for="">Phone No*</label>
              <input class="form-control" type="number"  name="phoneno" autocomplete="off">
            </div>
            <div class="form-group">
              <label for="">Address*</label>
              <input class="form-control" type="text"  name="address" autocomplete="off">
            </div>
            <button class="btn btn-primary" type="submit">Add User</button>
          </form>
    </div>
