<div>
  <% include adminheader.html %>
</div>
<br><br><br><br>
<html>

<head>
  <style>
  body,.card{
      height: 100%;
      line-height: 1.8;
      background-color: #FAACA8;
      background-image: linear-gradient(45deg, #FAACA8 0%, #DDD6F3 100%);
    }
  </style>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">

</head>
<div class="card">
  <div class="title" style="color: rgb(10, 118, 185);"><strong>Purchase Reciept</strong></div>
  <div class="info">
    <div class="row">
      <div class="col-7"> <span id="heading">Date</span><br> <span id="details">
          <%= order.createdAt %>
        </span> </div>
      <div class="col-5 pull-right"> <span id="heading">Order No.</span><br> <span id="details">
          <%= order.order_id %>
        </span> </div>
    </div>
    <div>
      <br>
      <div><span id="heading" style="color: rgb(10, 118, 185);"><strong>User Details</strong></span><br> <span
          id="details"></span>
        <div>
          <span>Name :</span> <span>
            <%= userDetails.name %>
          </span><br>
          <span>Email Id :</span> <span>
            <%= userDetails.email %>
          </span><br>
          <span>Contact No :</span> <span>
            <%= userDetails.phone_no %>
          </span><br>
          <span>Address :</span> <span>
            <%= userDetails.address %>
          </span><br>
        </div>
      </div>
      <br>
      <div><span id="heading" style="color: rgb(185, 95, 10);"><strong>Order Products</strong></span><br> <span
          id="details"></span>
        <span class="col-5 pull-right"> <span id="heading">Order Status.</span><br> <span id="details">
            <%= order.status %>
          </span> </span>
        <% orderDetails.forEach(function(orderDetails){ %>
          <div><span id="heading" style="color: rgb(10, 118, 185);"><strong>Product Details</strong></span><br> <span
              id="details"></span>
            <div>
              <span>Name :</span> <span>
                <%= orderDetails.productName %>
              </span><br>
              <span>Price/item :</span> <span>
                <%= orderDetails.price %>
              </span><br>
            </div>
            <% } )%>
              <br>
              <span style="color: rgb(184, 96, 24); "><strong> Total Price :</strong> </span> <span>
                <%= order.total_order_amount %>
              </span><br>
          </div>
      </div>
    </div>

  </div>
  <br>
  <div style="margin-left: 40%;">
    <form action="/admin/updatestatus" method="POST">
      <select name="status">
        <option value="Pending">Pending</option>
        <option value="On Its Way">On It's Way</option>
        <option value="Delivered">Delivered</option>
        <option value="Refunded">Refunded</option>
      </select>
      <button name="orderId" value=<%=order.id %> >Update</button>
      <br> <br>
    </form>
    
  </div>
</div>

</html>