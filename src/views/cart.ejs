<div class="table-data">
  <h2 style="color: rgb(22, 111, 167); text-align: center;">Display cart details</h2>
  <br>
  <table class="table table-striped" border="1">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Product Name</th>
        <th scope="col">Description</th>
        <th scope="col">Quantity</th>
        <th scope="col"> Total Price</th>
        <th scope="col">Remove item</th>
      </tr>
    </thead>
    <% usercartitems.forEach(function(usercartitem){ %>
      <tr>
        <td scope="row">
          <%= usercartitem.product.name %>
        </td>
        <td scope="row">
          <%= usercartitem.product.description %>
        </td>
        <td scope="row">
          <%= usercartitem.cart.quantity %>
        </td>
        <td scope="row">
          <%= usercartitem.cart.quantity * usercartitem.product.price %>
        </td>
        <form action='/login/removecartitem' method="Post">
          <td scope="row"><button type="submit" name="cartid" value=<%=usercartitem.cart.id %>> Remove Item <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
          </svg></button>
          </td>
        </form>

      </tr>
      <% } )%>

  </table>
  <br><br>
  <div style="width: 100%; overflow: hidden;">
    <div style="width: 300px; margin-left:50px;float: left;">
      <% if(count){ %>
        <form action="/login/emptycart" method="POST">
          <% } %>
            <button type="submit" name="cartid" style="margin-left: 40%;"> Empty Cart</button>
        </form>
    </div>
    <div style="width: 300px; float: left;">
      <% if(count){ %>
        <form action='/order' method="Post">
          <% } %>
            <td scope="row"><button type="submit" name="cartid"> Order</button></td>
        </form>
    </div>
  </div>